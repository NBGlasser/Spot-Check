{{!-- nav bar --}}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="mr-2"><img id="logo" src="/assets/images/spotcheck-logo.png" alt="logo-spotcheck"></span><a href="/login"><h1 id="name-app" class="mrl-auto">Spotcheck</h1></a>
    <button id="menu-button" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a id="near-you" href="/home" class="nav-link mr-2">Home</a>
            </li>
            <li class="nav-item">
                <a id="spot-claimed" href="/spot-claimed" class="nav-link mr-2">Spot Claimed</a>
            </li>
        </ul>
    </div>
</nav>

{{!-- main container --}}
<div class="container text-center mx-auto">

    {{!-- card to display the spot claimed --}}
    <div class="row mt-4">
        <div class="col-sm-12 col-md-8 col-lg-8 text-center mx-auto">
            <div class="card">
                <div id="spot-claimed-title" class="card-header font-weight-bold">Spot you claimed</div>
                <div class="card-body text-center mx-auto">
                    <form class="mt-3 text-left">
                        <div id="spot-info" class="text-center">
                        {{#object}}    
                            <p>Spot: {{id}} - Location: {{latitude}} ; {{longitude}}</p>
                        {{/object}}
                        </div>
                        <button id="not-available-btn" type="submit" class="btn bg-danger">The spot wasn't available!</button>
                        <button id="leave-spot-btn" type="submit" class="btn bg-success">I am leaving the spot!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>